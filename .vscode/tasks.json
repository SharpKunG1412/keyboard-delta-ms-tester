{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-static-libgcc",
                "-static-libstdc++",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\glad.c",
                "-lglfw3dll",
                "-lglfw3",
                "-o",
                "${workspaceFolder}\\keyboard-delta-ms-tester.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:/C:/path/to/g++.exe"
        }
    ]
}